<resources>

    <style name="App.News.AppTheme" parent="App.News.BaseTheme"/>

    <style name="App.News.BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_news_colorPrimary</item>
        <item name="colorPrimaryDark">@color/app_news_colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/app_news_colorPrimaryLight</item>
        <item name="colorAccent">@color/app_news_colorAccent</item>
    </style>

    <style name="App.News.DrawerStyle" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">#0D000000</item>
        <item name="listPreferredItemHeightSmall">60dp</item>
    </style>

    <style name="App.News.Checkbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorPrimary">@color/app_news_colorPrimary</item>
        <item name="colorPrimaryDark">@color/app_news_colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/app_news_colorPrimaryLight</item>
        <item name="colorAccent">@color/app_news_colorAccent</item>
    </style>

    <style name="App.News.AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorControlNormal">@android:color/white</item>
    </style>
    <style name="App.News.AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="App.News.Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="App.News.TextAppearance.CardContent.Headline.Medium" parent="">
        <item name="android:textColor">@color/app_news_colorPrimaryDark</item>
    </style>

</resources>
