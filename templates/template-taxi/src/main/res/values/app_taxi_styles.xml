<resources>

    <style name="App.Taxi.AppTheme" parent="App.Taxi.BaseTheme" />

    <style name="App.Taxi.BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_taxi_colorPrimary</item>
        <item name="colorPrimaryDark">@color/app_taxi_colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/app_taxi_colorAccentLight</item>
        <item name="colorAccent">@color/app_taxi_colorAccent</item>
        <item name="colorControlNormal">@color/app_taxi_grey_hard</item>
    </style>

    <style name="App.Taxi.AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="App.Taxi.AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="App.Taxi.Toolbar.Light" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/app_taxi_grey_very_hard</item>
        <item name="android:textColorPrimary">@color/app_taxi_grey_very_hard</item>
    </style>

    <style name="App.Taxi.CustomTabTextAppearance" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="App.Taxi.CustomRatingBar" parent="Base.Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlHighlight">@color/app_taxi_colorPrimaryLight</item>
        <item name="colorAccent">@color/app_taxi_colorPrimary</item>
        <item name="colorControlNormal">@color/app_taxi_grey_hard</item>
    </style>

    <style name="App.Taxi.EditText.Accent" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/app_taxi_colorPrimary</item>
        <item name="colorControlHighlight">@color/app_taxi_colorPrimary</item>
        <item name="colorControlNormal">@color/app_taxi_grey_very_hard</item>
    </style>

    <style name="App.Taxi.ProgressBar.Primary" parent="@style/AppTheme">
        <item name="colorPrimary">@color/app_taxi_colorPrimary</item>
        <item name="colorAccent">@color/app_taxi_colorPrimary</item>
    </style>

    <style name="App.Taxi.FragmentAnimation" parent="@style/AppTheme">

    </style>

    <style name="App.Taxi.AppTheme.FullScreenDialog">
        <item name="android:windowAnimationStyle">@style/App.Taxi.Animation.WindowSlideUpDown</item>
    </style>

    <style name="App.Taxi.Animation.WindowSlideUpDown" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_fragment_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fragment_out</item>
    </style>

    <!--style for ripple library-->
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <style name="RippleStyleDark" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#80000000</item>
    </style>

</resources>
