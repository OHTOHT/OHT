<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/app_chat_grey_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/app_chat_spacing_medium">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="@dimen/app_chat_spacing_medium"
            app:cardElevation="@dimen/app_chat_spacing_xsmall"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/app_chat_spacing_medium"
                    android:layout_marginLeft="@dimen/app_chat_spacing_large"
                    android:layout_marginRight="@dimen/app_chat_spacing_large"
                    android:layout_marginTop="@dimen/app_chat_spacing_large"
                    android:text="About"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/material_grey_800" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/app_chat_grey_soft" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="@dimen/app_chat_spacing_mlarge"
                        android:layout_height="@dimen/app_chat_spacing_mlarge"
                        android:layout_margin="@dimen/app_chat_spacing_middle"
                        android:src="@drawable/app_chat_ic_brief" />

                    <TextView
                        android:id="@+id/description_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/app_chat_spacing_medium"
                        android:text="Brief explanation about this place"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/material_grey_600" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="@dimen/app_chat_spacing_mlarge"
                        android:layout_height="@dimen/app_chat_spacing_mlarge"
                        android:layout_margin="@dimen/app_chat_spacing_middle"
                        android:src="@drawable/app_chat_ic_call" />

                    <TextView
                        android:id="@+id/description1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/app_chat_spacing_medium"
                        android:text="0883 267 813"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/material_grey_600" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="@dimen/app_chat_spacing_mlarge"
                        android:layout_height="@dimen/app_chat_spacing_mlarge"
                        android:layout_margin="@dimen/app_chat_spacing_middle"
                        android:src="@drawable/app_chat_ic_web" />

                    <TextView
                        android:id="@+id/description2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/app_chat_spacing_medium"
                        android:text="www.samplewebsite.com"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/material_grey_600" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="@dimen/app_chat_spacing_medium"
            app:cardElevation="@dimen/app_chat_spacing_xsmall"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/app_chat_spacing_medium"
                    android:layout_marginLeft="@dimen/app_chat_spacing_large"
                    android:layout_marginRight="@dimen/app_chat_spacing_large"
                    android:layout_marginTop="@dimen/app_chat_spacing_large"
                    android:text="Gallery"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/material_grey_800" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/app_chat_grey_soft" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="@dimen/app_chat_spacing_medium">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/app_chat_spacing_medium"
                        android:layout_weight="1"
                        android:text="5 Photos"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/material_grey_600" />

                    <Button
                        android:id="@+id/bt_view_photos"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIEW"
                        android:textColor="@color/material_grey_600" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="@dimen/app_chat_spacing_medium">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/app_chat_spacing_medium"
                        android:layout_weight="1"
                        android:text="3 Album"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/material_grey_600" />

                    <Button
                        android:id="@+id/bt_view_gallery"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIEW"
                        android:textColor="@color/material_grey_600" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="@dimen/app_chat_spacing_medium"
            app:cardElevation="@dimen/app_chat_spacing_xsmall"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/app_chat_spacing_medium"
                    android:layout_marginLeft="@dimen/app_chat_spacing_large"
                    android:layout_marginRight="@dimen/app_chat_spacing_large"
                    android:layout_marginTop="@dimen/app_chat_spacing_large"
                    android:text="Description"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/material_grey_800" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/app_chat_grey_soft" />

                <TextView
                    android:id="@+id/descriptioxn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_chat_spacing_large"
                    android:text="@string/app_chat_lorem_ipsum"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/material_grey_600" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>