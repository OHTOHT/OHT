<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/app_travel_spacing_large"
        android:paddingRight="@dimen/app_travel_spacing_large">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DURATION"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/app_travel_grey_hard" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="@dimen/app_travel_spacing_middle"
            android:src="@drawable/app_travel_ic_close"
            android:tint="@color/app_travel_grey_medium" />

        <ImageView
            android:id="@+id/img_done"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="@dimen/app_travel_spacing_middle"
            android:src="@drawable/app_travel_ic_done"
            android:tint="@color/app_travel_colorAccentDark" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_travel_grey_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/app_travel_spacing_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Night(s)"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/app_travel_grey_text"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_dec"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="@dimen/app_travel_spacing_middle"
                android:src="@drawable/app_travel_ic_remove"
                android:tint="@color/app_travel_colorPrimary" />

            <TextView
                android:id="@+id/tv_night"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_inc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="@dimen/app_travel_spacing_middle"
                android:src="@drawable/app_travel_ic_add"
                android:tint="@color/app_travel_colorPrimary" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_travel_spacing_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_travel_spacing_middle"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_check_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check-out: Fri, 13 Apr 2018"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/app_travel_grey_very_hard" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>